---
// @ts-ignore
import { Icon } from "astro-icon/components";

const { highlight, title, items } = Astro.props;
---

<div class="mt-16 md:mt-24">
  <h2 class="text-4xl lg:text-5xl font-bold lg:tracking-tight">
    {title}
  </h2>
  <p class="text-lg mt-4 text-slate-600">
    {highlight}
  </p>
</div>

<div class="grid sm:grid-cols-2 md:grid-cols-3 mt-16 gap-8">
  {
    items.map((item) => (
      <div class="flex gap-4 items-start">
        <div class="mt-1 bg-orange-100 rounded-full p-2 w-8 h-8 shrink-0">
          <Icon class="text-orange-600" name={item.icon} />
        </div>
        <div>
          <h3 class="font-semibold text-lg">{item.title}</h3>
          <p class="text-slate-500 mt-2 leading-relaxed">{item.description}</p>
        </div>
      </div>
    ))
  }
</div>
